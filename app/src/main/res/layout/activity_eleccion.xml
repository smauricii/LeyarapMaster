<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:hapticFeedbackEnabled="false"
    tools:context=".HomeActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/pregone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:background="#000000"
        android:backgroundTint="#63000000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/txt_como_te_sientes"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderpreg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregone"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/pregtwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#63000000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/txt_como_has_dormido"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderpreg1" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderpreg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="5"
        app:layout_constraintBottom_toTopOf="@+id/pregthree"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregtwo"
        app:layout_constraintVertical_bias="0.507"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/pregthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="#000000"
        android:backgroundTint="#83000000"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/txt__nivel_actividad_fisica"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregtwo" />

    <com.google.android.material.slider.Slider
        android:id="@+id/sliderpreg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:contentDescription="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:stepSize="1"
        android:value="0"
        android:valueFrom="0"
        android:valueTo="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregthree" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="64dp"
        android:layout_height="101dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderpreg3"
        app:srcCompat="@drawable/next_btn" />

    <TextView
        android:id="@+id/txt_inicio"
        android:layout_width="145dp"
        android:layout_height="67dp"
        android:gravity="center"
        android:text="@string/txt_inicio"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_next"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sliderpreg3"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:id="@+id/emailuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/pregone"
        app:layout_constraintEnd_toStartOf="@+id/salirbtn"
        app:layout_constraintHorizontal_bias="0.601"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <ImageView
        android:id="@+id/salirbtn"
        android:layout_width="66dp"
        android:layout_height="67dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toTopOf="@+id/pregone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166"
        app:srcCompat="@drawable/btn_salida" />


</androidx.constraintlayout.widget.ConstraintLayout>